@using MStartPreHiringTask.DAL.Models.User;
@model IEnumerable<User>

@{
    ViewData["Title"] = "All Users";
}



<h1>All Users</h1>
<br />
<br />

<a asp-action="AddUser" class="btn btn-primary">Add New User</a>
<div class="row justify-content-center align-items-center mt-5">
    <form asp-action="Index" class="row col-8 offset-1">
        <div class="col-8">
            <input type="search" class="form-control" name="SearchValue" PlaceHolder="Search" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </form>
</div>


@if (Model.Count() > 0)
{
    <table class="mt-3 table table-striped table-hover">
        <thead>
            <tr>
                <td> @Html.DisplayNameFor(U=>U.Id)</td>
                <td> @Html.DisplayNameFor(U=>U.UserName)</td>
                <td> @Html.DisplayNameFor(U=>U.Email)</td>
                <td> @Html.DisplayNameFor(U=>U.First_Name)</td>
                <td> @Html.DisplayNameFor(U=>U.Last_Name)</td>
                <td> @Html.DisplayNameFor(U=>U.Date_of_Birth)</td>
                <td> @Html.DisplayNameFor(U=>U.status)</td>
                <td> @Html.DisplayNameFor(U=>U.gender)</td>
                <td> @Html.DisplayNameFor(U=>U.Update_DateTime_UTC)></td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
       @foreach (var User in Model)
            {
                <tr>
                    <td>@User.Id</td>
                    <td>@User.UserName</td>
                    <td>@User.Email</td>
                    <td>@User.First_Name</td>
                    <td>@User.Last_Name</td>
                    <td>@User.Date_of_Birth</td>
                    <td>@Html.DisplayFor(M=>User.status)</td>
                    <td>@Html.DisplayFor(M=>User.gender)</td>
                    <td>@User.Update_DateTime_UTC</td>
                    <partial name="Buttons" model="@User.Id.ToString()" />
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h3>There is No Users!</h3>
    </div>

}

