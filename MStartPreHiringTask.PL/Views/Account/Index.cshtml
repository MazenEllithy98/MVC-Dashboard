@using MStartPreHiringTask.DAL.Models.Account;
@model IEnumerable<Account>

@{
    ViewData["Title"] = "Index";
}



<h1>All Accounts</h1>
<br />
<br />

<a asp-action="AddAccount" class="btn btn-primary">Add New Account</a>
<div class="row justify-content-center align-items-center mt-5">
    <form asp-action="Index" class="row col-8 offset-1">
        <div class="col-8">
            <input type="search" class="form-control" name="SearchValue" PlaceHolder="Search" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </form>
</div>


@if (Model.Count() > 0)
{
    <table class="mt-3 table table-striped table-hover">
        <thead>
            <tr>
                <td> @Html.DisplayNameFor(A=>A.Id)</td>
                <td> @Html.DisplayNameFor(A=>A.UserId)</td>
                <td> @Html.DisplayNameFor(A=>A.Account_Number)</td>
                <td> @Html.DisplayNameFor(A=>A.Balance)</td>
                <td> @Html.DisplayNameFor(A=>A.CurrencyType)</td>
                <td> @Html.DisplayNameFor(A=>A.status)</td>
                <td> @Html.DisplayNameFor(A=>A.Update_DateTime_UTC)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var account in Model)
            {
                <tr>
                    <td>@account.Id</td>
                    <td>@account.UserId</td>
                    <td>@account.Account_Number</td>
                    <td>@account.Balance</td>
                    <td>@Html.DisplayFor(M=>account.CurrencyType)</td>
                    <td>@Html.DisplayFor(M=>account.status)</td>
                    <td>@account.Update_DateTime_UTC</td>
                    <partial name="Buttons" model="@account.Id.ToString()" />
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h3>There is No Accounts!</h3>
    </div>

}

